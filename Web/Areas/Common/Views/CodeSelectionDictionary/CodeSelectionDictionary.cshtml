              $(this).click(function () { //On click of any Alphabet
                  $(".return-to-top").show();
                  $("#list-reports li").removeClass("selected"); //Initially remove "selected" class if any
                  if (this == a || this == c || this == h || this == i || this == m || this == p || this == r || this == t || this == u) {
                      $(this).addClass("selected"); //Add "selected" class for the clicked one
                      var elementClick = $(this).attr("id"); //get respective 'Id' for example 'a','b','c'.. etc.,
                      $(".content-container").scrollTo($("#content-for-" + elementClick), 900); //scrollTo particular DOM Element
                      $(".content-container div").css({ 'background-color': '#ffffff' }); //set the background color to default, that is white
                      $(".content-container #content-for-" + elementClick).css({ 'background-color': '#d2f2ff' }); //set the background color to light-blue to that div
                  };
              });
          });

          //When "Return to Top" is clicked highlight the first Alphabet that 'A' and scroll to top.
          $('.clicktoup').click(function () {
              $("#list-reports li").each(function () {
                  $("#list-reports li").removeClass("selected"); //Remove classname "selected"
              });
              $("#a").addClass("selected"); //Add a class named "selected" to the first Alphabet
              $(".content-container").scrollTo($("#content-for-a"), 800); //This is for scrolling to particular element that is "A" here...
              $(".content-container div").css({ 'background-color': '#ffffff' }); //set the background color to default, that is white
              $(".content-container #content-for-a").css({ 'background-color': '#d2f2ff' }); //set the background color to light-blue to that div
          });
      });




  </script>
                  
 
